        "gridPos": { "x": 12, "y": 32, "w": 6, "h": 4 },
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(rate({job=\"tapo-camera-mcp\"} |= \"ERROR\" [1m]))",
            "legendFormat": "Errors/min"
