        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "blue", "value": null }
              ]
            },
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "üìä Total Messages (24h)",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "refId": "A",
            "expr": "increase(messages_total[24h])",
            "legendFormat": "Total"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null }
              ]
            },
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "üìà Message Rate Over Time",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "rate(messages_info_total[5m])",
            "legendFormat": "Info - {{source}}"
          },
          {
            "refId": "B",
            "expr": "rate(messages_warning_total[5m])",
            "legendFormat": "Warning - {{source}}"
          },
          {
            "refId": "C",
            "expr": "rate(messages_alarm_total[5m])",
            "legendFormat": "Alarm - {{source}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "barAlignment": 0,
              "lineWidth": 2,
              "fillOpacity": 20,
              "gradientMode": "opacity",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {
                "type": "linear"
              },
              "hideFrom": {
                "tooltip": false,
                "viz": false,
                "legend": false
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null }
              ]
            },
            "unit": "ops"
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["last", "max", "mean"]
          }
        }
      },
      {
        "id": 6,
        "type": "bargauge",
        "title": "üìä Messages by Category",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(messages_total) by (category)",
            "legendFormat": "{{category}}"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true,
          "minVizWidth": 75,
          "minVizHeight": 75
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null }
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 7,
        "type": "logs",
        "title": "üìù Recent System Logs",
        "gridPos": { "x": 0, "y": 12, "w": 24, "h": 12 },
        "targets": [
          {
            "refId": "A",
            "expr": "{job=\"tapo-camera-mcp\"}",
            "queryType": "range"
          }
        ],
        "options": {
          "dedupStrategy": "none",
          "enableLogDetails": true,
          "prettifyLogMessage": true,
          "showCommonLabels": false,
          "showLabels": false,
          "showTime": true,
          "sortOrder": "Descending",
          "wrapLogMessage": false
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "frameIndex": 0
            }
          }
        }
      },
      {
        "id": 8,
        "type": "piechart",
        "title": "üìä Message Severity Distribution",
        "gridPos": { "x": 0, "y": 24, "w": 8, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(messages_info_total) by (severity)",
            "legendFormat": "Info"
          },
          {
            "refId": "B",
            "expr": "sum(messages_warning_total) by (severity)",
            "legendFormat": "Warning"
          },
          {
            "refId": "C",
            "expr": "sum(messages_alarm_total) by (severity)",
            "legendFormat": "Alarm"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "donut",
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "displayLabels": ["name", "value", "percent"]
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "mappings": [],
            "unit": "short"
          }
        }
      },
      {
        "id": 9,
        "type": "table",
        "title": "üö® Recent Alarms",
        "gridPos": { "x": 8, "y": 24, "w": 16, "h": 8 },
        "targets": [
          {
            "refId": "A",
            "expr": "messages_alarm_total",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Timestamp"
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "color-background",
              "inspect": false
            },
            "mappings": [],
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null }
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "type": "timeseries",
        "title": "üìä Log Volume by Level",
        "gridPos": { "x": 0, "y": 32, "w": 12, "h": 8 },
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "refId": "A",
            "expr": "sum(count_over_time({job=\"tapo-camera-mcp\"} |= \"ERROR\" [1m]))",
            "legendFormat": "ERROR"
          },
          {
            "refId": "B",
            "expr": "sum(count_over_time({job=\"tapo-camera-mcp\"} |= \"WARNING\" [1m]))",
            "legendFormat": "WARNING"
          },
          {
            "refId": "C",
            "expr": "sum(count_over_time({job=\"tapo-camera-mcp\"} |= \"INFO\" [1m]))",
            "legendFormat": "INFO"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
