{
  "dashboard": {
    "id": null,
    "title": "üìã Smart Home - System Logs & Alerts Dashboard",
    "description": "Comprehensive log analysis and system alert monitoring with beautiful visualizations",
    "tags": ["logs", "alerts", "messages", "monitoring", "loki"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "üö® Active Alarms",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "refId": "A",
            "expr": "messages_alarm_total - messages_alarm_acknowledged_total",
            "legendFormat": "Unacknowledged"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            },
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "‚ö†Ô∏è Warnings (Last Hour)",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "refId": "A",
            "expr": "increase(messages_warning_total[1h])",
            "legendFormat": "Warnings"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            },
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "‚ÑπÔ∏è Info Messages (Last Hour)",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "refId": "A",
            "expr": "increase(messages_info_total[1h])",
