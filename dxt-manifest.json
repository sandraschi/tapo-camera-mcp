{
  "name": "tapo-camera-mcp",
  "version": "0.2.0",
  "description": "FastMCP 2.10 server for TP-Link Tapo cameras",
  "author": "Tapo Camera MCP Team",
  "license": "MIT",
  "server": {
    "command": ["python", "-m", "tapo_camera_mcp.server_v2"],
    "transport": "stdio",
    "timeout": 30,
    "environment": {
      "PYTHONUNBUFFERED": "1"
    }
  },
  "dependencies": [
    "fastmcp>=2.10.0",
    "pytapo>=3.3.48",
    "pydantic>=2.0.0",
    "python-dotenv>=1.0.0",
    "aiohttp>=3.9.0"
  ],
  "capabilities": [
    "camera:access",
    "network:access",
    "file:read",
    "file:write"
  ],
  "permissions": {
    "camera": {
      "description": "Access to control Tapo cameras"
    },
    "network": {
      "description": "Network access for camera communication"
    },
    "storage": {
      "description": "Local storage for configuration"
    }
  },
  "metadata": {
    "documentation": "https://github.com/yourusername/tapo-camera-mcp",
    "repository": "https://github.com/yourusername/tapo-camera-mcp",
    "issues": "https://github.com/yourusername/tapo-camera-mcp/issues"
  }
}
