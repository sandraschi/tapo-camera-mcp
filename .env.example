# Tapo Camera MCP Environment Variables
# Copy this file to .env and update the values

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Camera Connection
TAPO_CAMERA_HOST=192.168.1.100
TAPO_CAMERA_PORT=443
TAPO_CAMERA_USERNAME=admin
TAPO_CAMERA_PASSWORD=your_secure_password
TAPO_CAMERA_USE_HTTPS=true
TAPO_CAMERA_VERIFY_SSL=false
TAPO_CAMERA_TIMEOUT=10

# Stream Settings
TAPO_CAMERA_STREAM_TYPE=rtsp
TAPO_CAMERA_STREAM_QUALITY=high
TAPO_CAMERA_STREAM_AUDIO=true

# Storage Settings
TAPO_CAMERA_STORAGE_PATH=./recordings
TAPO_CAMERA_MAX_STORAGE_GB=10

# Motion Detection
TAPO_CAMERA_MOTION_DETECTION_ENABLED=true
TAPO_CAMERA_MOTION_SENSITIVITY=medium

# PTZ Settings
TAPO_CAMERA_PTZ_SPEED=0.5

# Recording Settings
TAPO_CAMERA_RECORDING_ENABLED=true
TAPO_CAMERA_RECORDING_MODE=motion
TAPO_CAMERA_RECORDING_PRE_BUFFER=5
TAPO_CAMERA_RECORDING_POST_BUFFER=10
TAPO_CAMERA_RECORDING_MAX_CLIP_LENGTH=300

# API Security
API_AUTH_REQUIRED=false
API_KEY=your_api_key_here
ALLOWED_IPS=127.0.0.1,::1
RATE_LIMIT=100/minute

# Email Notifications
EMAIL_ENABLED=false
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@example.com
EMAIL_TO=admin@example.com

# Webhook Notifications
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://example.com/webhook
WEBHOOK_HEADERS={}

# Home Assistant Integration
HOMEASSISTANT_ENABLED=false
HOMEASSISTANT_DISCOVERY_PREFIX=homeassistant

# MQTT Settings (for Home Assistant)
MQTT_ENABLED=false
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=tapo_camera

# ONVIF Settings
ONVIF_ENABLED=true
ONVIF_PORT=2020

# Logging
LOG_FILE=
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
