{
  "name": "tapo-camera-mcp",
  "version": "1.0.0",
  "description": "Comprehensive camera management MCP server for Tapo, Ring, Furbo, and USB webcams with 26+ tools",
  "author": "Sandra Schi",
  "license": "MIT",
  "outputDir": "dist",
  "mcp": {
    "version": "2.12.0",
    "server": {
      "command": "python",
      "args": ["-m", "tapo_camera_mcp.server_v2", "--direct"],
      "transport": "stdio"
    },
    "capabilities": {
      "tools": true,
      "resources": false,
      "prompts": false
    }
  },
  "dependencies": {
    "python": ">=3.10.0",
    "fastmcp": ">=2.12.0,<3.0.0"
  }
}





