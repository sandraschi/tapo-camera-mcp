#!/usr/bin/env python3
"""
Cross-platform launcher for Tapo Camera MCP
This replaces the .exe file and works on Windows, macOS, and Linux
"""

import sys
import os

# Add src to path so we can import the module
script_dir = os.path.dirname(__file__)
src_path = os.path.join(script_dir, '..', 'src')
sys.path.insert(0, os.path.abspath(src_path))

# Import and run the CLI
try:
    from tapo_camera_mcp.cli_v2 import main
    if __name__ == '__main__':
        main()
except ImportError as e:
    print(f"Error: Could not import tapo_camera_mcp.cli_v2")
    print(f"Make sure dependencies are installed: pip install -e .")
    print(f"Original error: {e}")
    sys.exit(1)