#!/usr/bin/env python3
"""
Cross-platform launcher for watchfiles
This replaces the .exe file and works on Windows, macOS, and Linux
"""

import sys
import os

# Add src to path
src_path = os.path.join(os.path.dirname(__file__), '..', 'src')
sys.path.insert(0, os.path.abspath(src_path))

# Import and run watchfiles_runner
from watchfiles_runner import main

if __name__ == '__main__':
    main()